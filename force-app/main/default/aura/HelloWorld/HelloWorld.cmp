<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    <aura:attribute name="greet" type="String" default="Hello World"/>

    <lightning:card footer="Hello World Fotter" title="{! v.greet+v.greet+v.greet}">
        <aura:set attribute="actions">
            <!-- <lightning:button label="New"/> -->
        </aura:set>
        <p class="slds-p-horizontal_small">
            This is my first aura component!
			    <!-- Destructive variant: Identifies a potentially negative action -->
				<lightning:button variant="destructive" label="Destructive" title="Destructive action" />
        </p>
    </lightning:card>
</aura:component>